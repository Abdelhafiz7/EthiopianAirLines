@model EthioAirLines.Models.Ucaklar

@{
    ViewBag.Title = "Edit Aircraft";
}

<div class="form-container">
    <h2>Edit Aircraft</h2>

    @using (Html.BeginForm("Edit", "Ucaklar", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        @* Hidden field ensures the ID is posted back *@
        @Html.HiddenFor(model => model.Ucak_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Ucak_ID, "Aircraft ID:")
            @Html.TextBoxFor(model => model.Ucak_ID, new { @class = "form-control-readonly", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.Ucak_ID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model)
            @Html.TextBoxFor(model => model.Model, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kapasite, "Capacity:")
            @Html.TextBoxFor(model => model.Kapasite, new { @class = "form-control", type = "number", required = "required" })
            @Html.ValidationMessageFor(model => model.Kapasite, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    }

    <p class="back-to-list">
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
