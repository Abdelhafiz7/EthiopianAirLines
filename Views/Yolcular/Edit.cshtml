@model EthioAirLines.Models.Yolcular

@{
    ViewBag.Title = "Edit Passenger";
}

<div class="form-container">
    <h2>Edit Passenger</h2>

    @using (Html.BeginForm("Edit", "Yolcular", FormMethod.Post))
    {
        @Html.AntiForgeryToken() 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 

        @Html.HiddenFor(model => model.Yolcu_ID)

        <div class="form-group">
            <label>Passenger ID:</label>
            <input type="text" value="@Model.Yolcu_ID" readonly class="form-control-readonly" />
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="Adi">First Name:</label>
                @Html.TextBoxFor(model => model.Adi, new { @class = "form-control", id = "Adi", required = "required" })
                @Html.ValidationMessageFor(model => model.Adi, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="Soyad">Last Name:</label>
                @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", id = "Soyad", required = "required" })
                @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Email">Email:</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "Email", type = "email", required = "required" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Telefon">Phone (Optional):</label>
            @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control", id = "Telefon" })
            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
        </div>

        <button type="submit">Save Changes</button>
    }
    <p class="back-to-list">
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>