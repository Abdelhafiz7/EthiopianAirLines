@model EthioAirLines.Models.Yolcular

@{
    ViewBag.Title = "Delete Passenger";
}

<div class="form-container">
    <h2>Delete Passenger</h2>

    <h3 class="confirmation-message">Are you sure you want to delete this passenger?</h3>
    <p class="warning-text">
        This action cannot be undone. All reservations associated with this passenger will also be deleted.
    </p>

    <div class="detail-display">
        <div class="detail-row">
            <span class="detail-label">Passenger ID:</span>
            <span class="detail-value">@Model.Yolcu_ID</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Name:</span>
            <span class="detail-value">@Model.Adi @Model.Soyad</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Email:</span>
            <span class="detail-value">@Model.Email</span>
        </div>
        <div class="detail-row">
            <span class="detail-label">Phone:</span>
            <span class="detail-value">@Model.Telefon</span>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Yolcu_ID)

        <button type="submit" class="btn-delete-confirm">Confirm Delete</button>
    }
    <p class="back-to-list">
        @Html.ActionLink("Cancel", "Index")
    </p>
</div>

@section scripts {
    <script>// Optional: Add a client-side confirmation prompt for extra safety
        document.querySelector('.btn-delete-confirm').addEventListener('click', function (e) {
            if (!confirm('This will permanently delete the passenger and ALL their reservations. Are you absolutely sure?')) {
                e.preventDefault();
            }
        });</script>
}