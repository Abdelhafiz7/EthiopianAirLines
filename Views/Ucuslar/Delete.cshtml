@model EthioAirLines.Models.Ucuslar
@{
    ViewBag.Title = "Delete Flight";
}

<div class="form-container">
    <h2>Delete Flight</h2>
    <h3>Are you sure you want to delete this flight?</h3>

    <div class="details-container">
        <dl class="dl-horizontal">
            <dt>Flight ID:</dt>
            <dd>@Model.Ucus_ID</dd>

            <dt>From:</dt>
            <dd>@Model.Kalkis_havaalani</dd>

            <dt>To:</dt>
            <dd>@Model.Varis_havaalani</dd>

            <dt>Departure:</dt>
            <dd>@Model.Kalkis_saati.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt>Arrival:</dt>
            <dd>@Model.Varis_saati.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt>Aircraft ID:</dt>
            <dd>@Model.Ucak_ID</dd>
        </dl>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Ucus_ID)

        <div class="form-actions">
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>