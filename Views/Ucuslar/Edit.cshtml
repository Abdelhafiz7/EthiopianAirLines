@model EthioAirLines.Models.Ucuslar
@{
    ViewBag.Title = "Edit Flight";
    var aircrafts = ViewBag.Aircrafts as List<EthioAirLines.Models.Ucaklar>;
}

<div class="form-container">
    <h2>Edit Flight</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Ucus_ID)

        <div class="form-row">
            <div class="form-group">
                <label>From:</label>
                @Html.TextBoxFor(m => m.Kalkis_havaalani, new { required = "required" })
            </div>
            <div class="form-group">
                <label>To:</label>
                @Html.TextBoxFor(m => m.Varis_havaalani, new { required = "required" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Departure:</label>
                @Html.TextBoxFor(m => m.Kalkis_saati, "{0:yyyy-MM-ddTHH:mm}", new { type = "datetime-local", required = "required" })
            </div>
            <div class="form-group">
                <label>Arrival:</label>
                @Html.TextBoxFor(m => m.Varis_saati, "{0:yyyy-MM-ddTHH:mm}", new { type = "datetime-local", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <label>Aircraft:</label>
            <select name="Ucak_ID" required>
                @foreach (var a in aircrafts)
                {
                    <option value="@a.Ucak_ID" @(a.Ucak_ID == Model.Ucak_ID ? "selected" : "")>
                        @a.Ucak_ID - @a.Model
                    </option>
                }
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>